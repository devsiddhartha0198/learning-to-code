#include<stdio.h>
main()
	{
		printf("order please: \n1 burger-239 \n2 pizza-129 \n3 pasta-179 \n4 sandwich-149");
		int choice=0;
		scanf("%d",&choice);
		switch(choice)
		{
		case 1:
			printf("food item-burger \n price-239");
			break;
			case 2:
			printf("food item-pizza \n price-129");
			break;
		    case 3:
			printf("food item-pasta \n price-179");
			break;
			case 4:
			printf("food item-sandwich \n price-149");
			default : printf("you have not ordered anything yet");
		}
	}
